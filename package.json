    "devDependencies": {
        "@nestjs/testing": "^6.8.3",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.0.1",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-rate-limit": "^3.3.3",
        "@types/file-type": "^10.9.1",
        "@types/helmet": "^0.0.44",
        "@types/jest": "^24.0.19",
        "@types/jsonwebtoken": "^8.3.4",
        "@types/lodash": "^4.14.144",
        "@types/mime-types": "^2.1.0",
        "@types/morgan": "^1.7.37",
