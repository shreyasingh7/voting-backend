{
    "name": "hodlgame-backend",
    "version": "0.0.1",
    "description": "Hodlgame, Typescript, Postgres, TypeORM",
    "author": "Narek Hakobyan <narek.hakobyan.07@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:hmr": "node dist/main",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs:dev": "vuepress dev -p 7070",
        "docs:build": "DEPLOY_ENV=gh-pages vuepress build",
        "docs:deploy": "yarn docs:build && gh-pages -d .vuepress/dist"
    },
    "dependencies": {
        "@dfuse/client": "^0.3.6",
        "@nest-modules/mailer": "nest-modules/mailer",
        "@nestjs/common": "^6.8.3",
        "@nestjs/core": "^6.8.3",
        "@nestjs/jwt": "^6.1.1",
        "@nestjs/microservices": "^6.8.3",
        "@nestjs/passport": "^6.1.0",
        "@nestjs/platform-express": "^6.8.3",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/typeorm": "^6.2.0",
        "@nestjsx/crud": "^4.4.1",
        "@nestjsx/crud-typeorm": "^4.4.1",
        "@waxio/waxjs": "^0.0.11",
        "aadhaar-validator": "^1.1.0",
        "aws-sdk": "~2.549.0",
        "axios": "^0.19.2",
        "bcrypt": "~3.0.6",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10.2",
        "compression": "^1.7.4",
        "crypto": "^1.0.1",
        "dotenv": "~8.1.0",
        "eosjs": "^20.0.3",
        "express": "~4.17.1",
        "express-rate-limit": "~5.0.0",
        "file-type": "~12.3.0",
        "graphql-ws": "^0.1.15",
        "hbs": "^4.1.0",
        "helmet": "~3.21.1",
        "install": "^0.13.0",
        "jsonwebtoken": "~8.5.1",
        "lodash": "^4.17.15",
        "mime-types": "~2.1.24",
        "morgan": "~1.9.1",
        "mysql": "^2.18.1",
        "nestjs-admin": "^0.3.0",
        "node-fetch": "^2.6.0",
        "node-telegram-bot-api": "^0.40.0",
        "nodemailer": "^6.4.2",
        "nodemailer-sendgrid": "^1.0.3",
        "nodemailer-ses-transport": "^1.5.1",
        "passport": "~0.4.0",
        "passport-jwt": "^4.0.0",
        "paypal-rest-sdk": "^1.8.1",
        "pg": "^7.12.1",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.0",
        "request-context": "~2.0.0",
        "rxjs": "^6.5.4",
        "source-map-support": "^0.5.13",
        "swagger-ui-express": "^4.1.2",
        "typeorm": "^0.2.22",
        "typeorm-transactional-cls-hooked": "^0.1.8",
        "typescript": "^3.6.4",
        "unirest": "^0.6.0",
        "util": "^0.12.1",
        "uuid": "^3.3.3",
        "ws": "^7.2.1"
